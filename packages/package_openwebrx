#!/bin/bash

###
### AWACS Package
###
### package_openwebrx
###
###
### 20250801-0100
###

log "Installing OpenWebRX ..."

cd $AWACS_SOURCE
sudo su -
wget -O /usr/share/keyrings/openwebrx.gpg https://repo.openwebrx.de/openwebrx.gpg
echo "deb [signed-by=/usr/share/keyrings/openwebrx.gpg] https://repo.openwebrx.de/ubuntu/ unstable main" > /etc/apt/sources.list.d/openwebrx-unstable.list
apt-get update
apt-get install openwebrx