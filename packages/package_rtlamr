#!/bin/bash

###
### AWACS Package
###
### package_rtlamr
###
###
### 20250804-0100
###

case $1 in
    remove )
        log "Removing RTLAMR support..."
        sudo rm -rf $AWACS_SOURCE/rtlamr
        sudo rm /usr/local/bin/rtlamr
        ;;
    install )
        log "Installing RTLAMR ..."
        sudo apt install golang rtl-sdr -y
        # Clone and build rtlamr
        cd $AWACS_SOURCE
        git clone https://github.com/bemasher/rtlamr.git
        cd rtlamr
        go build
        # Install binary
        sudo cp rtlamr /usr/local/bin/
        ;;
    * )
        error "Unknown action on package_rtlamr: $1"
        ;;
esac    


